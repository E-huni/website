= form_for(assignment) do |f|
  .medium-12.columns
    = f.text_field :title, placeholder: 'Project Title'
  .medium-12.columns
    = f.text_field :link, placeholder: 'e.g http://www.example.com'
  .medium-12.columns
    = f.text_area :description, placeholder: 'Project description'
  .medium-12.columns
    .callout.medium-5.columns
      = f.label :start_date, 'Start Date'
      = f.datetime_select :start_date, default: Time.zone.now
    .callout.medium-5.columns
      = f.label :due_date, 'Due Date'
      .medium-6.columns
      = f.datetime_select :due_date
  .medium-12.columns
    = f.submit 'Create Assignment', class: 'button'
